<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_mesa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="com.iesnervion.dleal.appfebrerobar.LoginMesa">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logobar"
        android:id="@+id/logologinmesa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>


    <com.shaishavgandhi.loginbuttons.FacebookButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoginMesa"
        android:text="Asignar Mesa"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:roundedCorner="true"
        app:transparentBackground="true"
        app:roundedCornerRadius="75dp"
        app:iconSize="0dp"/>



    <com.iesnervion.dleal.appfebrerobar.customfont.Customfont
        android:text="Nombre de cuenta"
        android:id="@+id/lblnombre"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logologinmesa"
        android:textSize="20dp"
        />
    <com.csmpl.androidlib.edittextmod.EditTextMod xmlns:edittextmod="http://schemas.android.com/apk/res-auto"
        android:id="@+id/txtnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblnombre"

        style="@style/EditText.Login"
        android:theme="@style/EditText.Login"
        edittextmod:BlockIntermediateSpace="true"
        android:hint="Nombre..."
        />

    <com.iesnervion.dleal.appfebrerobar.customfont.Customfont
        android:text="Clave de la mesa"
        android:id="@+id/lblintroducepassw"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtnombre"
        android:textSize="20dp"
        />

    <com.csmpl.androidlib.edittextmod.EditTextMod xmlns:edittextmod="http://schemas.android.com/apk/res-auto"
        android:id="@+id/passwloginmesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblintroducepassw"
        android:layout_marginTop="10dp"
        style="@style/EditText.Login"
        android:theme="@style/EditText.Login"
        edittextmod:BlockIntermediateSpace="true"
        android:hint="Clave mesa..."
        />

</RelativeLayout>
