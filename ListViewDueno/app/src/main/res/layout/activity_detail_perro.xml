        android:id="@+id/idduenodetail" />

    <TextView
        android:text="NOMBRE: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idduenodetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/nombreperrodetail" />

    <TextView
        android:text="RAZA: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreperrodetail"
        android:layout_centerHorizontal="true"
