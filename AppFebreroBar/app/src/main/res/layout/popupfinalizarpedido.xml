<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.iesnervion.dleal.appfebrerobar.customfont.Customfont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tapas Bar"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/titlepopupfinalizarPedido"
        android:layout_margin="25dp"
        />

    <View
        android:id="@+id/SplitLine_hor1finalizarPedido"
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="#000"
        android:layout_below="@id/titlepopupfinalizarPedido"
        />
    <com.iesnervion.dleal.appfebrerobar.customfont.Customfont
        android:text="Desea Confirmar el pedido?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:layout_below="@id/SplitLine_hor1finalizarPedido"
        android:id="@+id/textView" />
</RelativeLayout>